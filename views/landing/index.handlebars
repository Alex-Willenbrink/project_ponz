

<div class="landing-page">

  <form class="signin-form signin" action="/login" method="post" autocomplete="off">
    <p class="signin-title">your dream vacation is waiting</p>
    <hr class="line">
    <div class="input-group">
      <input type="text" placeholder="username" name="username" required="true">
      <input type="password" placeholder="password" name="password" required="true">
    </div>
    <button class="login-register-btn">login</button>
  </form>

  <form class="signup-form signup" action="/api/users" method="post" autocomplete="off">
    <p class="signin-title">time to swim in cash</p>
    <hr class="line">
    <div class="input-group">
      <input type="text" placeholder="fname" name="fname" required="true">
      <input type="text" placeholder="lname" name="lname" required="true">
      <input type="text" placeholder="username" name="username" required="true">
      <input type="password" placeholder="password" name="password" required="true">
    </div>
    <button class="login-register-btn">register</button>
  </form>
  <div>
    <img src="./assets/savonne.png" alt="savonne" width="250">
  </div>
  

</div>



